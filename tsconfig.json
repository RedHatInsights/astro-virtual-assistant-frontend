{
  "compilerOptions": {
    "outDir": "./dist/",
    "jsx": "react",
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "target": "esnext",
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": true,
    "strict": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "esnext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*.js",
    "src/**/*.jsx",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "config/**/*.ts",
  ],
  "exclude": [
    "./src/entry.ts",
    "./*.js",
    "./*.d.ts"
  ],
  "types": [
    "node",
    "jest",
    "@testing-library/jest-dom"
  ]
}
